<h1>Create Item</h1>

<%= form_for @item do |f| %>
    <p><%= f.label :name, 'Имя' %> <%= f.text_field :name %></p>
    <p><%= f.label :description, 'Описание' %> <%= f.text_area :description, :size => "20x5" %></p>
    <p><%= f.label :prics, 'Цена' %> <%= f.text_field :price, :size => 5 %></p>

    <%= f.submit 'Create Item' %>

<% end %>